    <h1>
        <%= title %>
    </h1>

    <%- messages() %>

        <% if (errors && errors.length> 0) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <% if (locals.accountData) { %>
                    <h2>Welcome <%= locals.accountData.account_firstname %>
                    </h2>
                    <p>You're logged in.</p>

                    <hr>
                    <h3>Account Details</h3>
                    <ul>
                        <li><a href="/account/update/<%= locals.accountData.account_id %>"
                                title="Click to update account information">Update Account Information</a></li>
                    </ul>

                    
                        <% if (locals.accountData.account_type==='Employee' || locals.accountData.account_type==='Admin'
                            ) { %>
                            <hr>
                            <h3>Inventory Management</h3>
                            <p>Use the link below to manage inventory.</p>
                            <p><a href="/inv/" title="Manage website inventory">Manage Inventory</a></p>
                            <% } %>
                                <% } else { %>
                                    <p>Unable to retrieve account information.</p>
                                    <% } %>